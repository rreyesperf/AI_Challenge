# Agentic RAG API Environment Configuration
# Copy this file to .env and fill in your API keys

# ====== LLM API KEYS ======
# At least one of these must be configured

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Azure OpenAI Configuration
# Note: Use the standard openai package, not azure-openai
# The endpoint should be your Azure OpenAI resource endpoint
# The model name should be your deployment name (not the model name)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ====== VECTOR DATABASE CONFIGURATION ======

# ChromaDB (Default - Local Storage)
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Pinecone (Optional - Cloud Vector DB)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# ====== LLM CONFIGURATION ======

# Default provider to use when none specified
# Options: openai, anthropic, google, azure_openai
DEFAULT_LLM_PROVIDER=openai

# Default model for the default provider
DEFAULT_MODEL=gpt-3.5-turbo

# Generation parameters
MAX_TOKENS=2000
TEMPERATURE=0.7

# ====== RAG CONFIGURATION ======

# Text chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters  
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ====== FLASK CONFIGURATION ======

# Flask environment
FLASK_ENV=development
FLASK_DEBUG=True

# Application Insights (Optional)
APP_INSIGHTS_INSTRUMENTATION_KEY=your_app_insights_key_here

# ====== LOGGING CONFIGURATION ======

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ====== SECURITY CONFIGURATION ======

# Secret key for Flask sessions (generate a random string)
SECRET_KEY=your_secret_key_here

# API rate limiting (requests per minute)
RATE_LIMIT=100

# ====== EXAMPLE VALUES ======
# Remove this section and use actual values above

# Example OpenAI setup:
# OPENAI_API_KEY=sk-1234567890abcdef1234567890abcdef1234567890abcdef12

# Example Anthropic setup:
# ANTHROPIC_API_KEY=sk-ant-api03-1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef-1234567890abcdef

# Example Google setup:
# GOOGLE_API_KEY=AIzaSy1234567890abcdef1234567890abcdef123

